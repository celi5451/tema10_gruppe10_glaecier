---
import "../styles.css";
---

<header>
  <nav>
    <a href="/" class="logo">
      <img src="/img/glaecier_logo.svg" alt="logo" />
    </a>
    <div class="hamburger">
      <span class="line line1"></span>
      <span class="line line2"></span>
      <span class="line line3"></span>
    </div>
    <ul class="nav-list">
      <li><a class="nav-link" href="/#about_section">About</a></li>
      <li><a class="nav-link" href="/#membership_section">Membership</a></li>
      <li><a class="nav-link" href="/#community_section">Community</a></li>
      <li><a class="nav-link" href="/#events_section">Events</a></li>
      <li><a class="nav-link" href="/merchandise">Merchandise</a></li>
      <li><a href="/login/"><img src="../img/user.png" alt="Profile Icon" class="white-icon" /></a></li>
      <li><a href="/faq/"><img src="../img/information.png" alt="Faq Icon .." class="white-icon" /></a></li>
    </ul>
  </nav>
</header>

<style>
  /* nav og logo */
  header {
    top: 0;
    width: 100%;
    margin-bottom: 4rem;
  }
  .logo img {
    width: 100%;
    left: 5%;
    top: 50px;
    max-width: 200px;
    position: relative;
    z-index: 3;
  }
  .nav-list {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    list-style: none;
    gap: 1rem;
    margin-right: 5%;
  }
  .nav-list li a {
    color: var(--white);
    text-decoration: none;
    font-family: Arial, Helvetica, sans-serif;
  }
  .nav-link:hover {
    border-bottom: solid 1px var(--white);
  }

  /* burgermenu */
  .hamburger {
    cursor: pointer;
    display: none;
    /* Skjuler knappen som standard */
    position: fixed;
    top: 5%;
    right: 8%;
  }

  .hamburger .line {
    display: block;
    width: 40px;
    height: 3px;
    margin-bottom: 10px;
    background-color: var(--white);
    transition: transform 0.4s ease-in-out;
  }

  .pressed .line1 {
    transform-origin: 0% 0%;
    transform: rotate(40deg) translate(2px, 2px);
  }

  .pressed .line2 {
    opacity: 0;
  }

  .pressed .line3 {
    transform-origin: 0% 100%;
    transform: rotate(-38deg) translate(1px, -1px);
  }

  @media (max-width: 900px) {
    .hamburger {
      display: block;
      z-index: 2;
      overflow: ;
      /* Vis knappen, n√•r viewporten maksimalt er 900px */
    }

    .nav-list.shown {
      display: block;
      transform: translateX(0);
      position: fixed;
      font-size: var(--p-font-size);
      top: 0%;
      padding-top: 100px;
      right: 0;
      text-align: right;
      line-height: 1.5;
    }
    .logo img {
      max-width: 100px;
    }
    .nav-list {
      display: none;
      /* Fjern nav-listen som standard */
      font-size: var(--h2-font-size);
      z-index: 1;
      background-color: var(--header-background);
      color: var(--white);
      padding: 5%;
    }
  }
</style>

<script>
  const btn = document.querySelector(".hamburger");
  const menu = document.querySelector(".nav-list");

  function toggleMenu() {
    menu.classList.toggle("shown");
    btn.classList.toggle("pressed");
  }

  btn.addEventListener("click", toggleMenu);
</script>
