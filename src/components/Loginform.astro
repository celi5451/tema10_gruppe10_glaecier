---
import Button2 from "../components/Button2.astro";
---

<form id="login-form">
  <div>
    <label for="name">Username</label>
    <input type="text" name="name" />
  </div>
  <div>
    <label for="password">Password</label>
    <input type="password" name="password" />
  </div>
  <div class="button"><a href="./memberpage"></a><Button2 buttontext="Log in" /></div>
</form>

<style>
  #login-form {
    margin: 2rem;
  }
  #login-form .button {
    text-align: center;
    margin: 2rem;
  }
  input {
    width: 100%;
  }
  input[type="text"],
  input[type="password"] {
    width: 100%;
    padding: 12px 20px;
    margin: 8px 0;
    box-sizing: border-box;
  }
  header {
    background-color: var(--dark-background);
  }
</style>
