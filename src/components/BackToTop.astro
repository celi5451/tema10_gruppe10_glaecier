<div class="back-to-top" data-arrow-align="right" style="display: block; opacity: 1;">
  <a class="semplice-event" data-event-type="helper" data-event="scrollToTop"
    ><svg version="1.1" id="Ebene_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="53px" height="20px" viewBox="0 0 53 20" enable-background="new 0 0 53 20" xml:space="preserve">
      <g id="Ebene_3"> </g>
      <g>
        <polygon points="43.886,16.221 42.697,17.687 26.5,4.731 10.303,17.688 9.114,16.221 26.5,2.312 	"></polygon>
      </g>
    </svg>
  </a>
</div>
<style>
  .back-to-top {
    position: fixed;
    right: 30px;
    bottom: 30px;
    z-index: 118;
    display: none;
    display: block;
    opacity: 1;
  }
  .back-to-top a {
    display: block;
    padding: 10px;
    cursor: pointer;
  }
  .back-to-top img,
  .back-to-top svg {
    width: 53px;
    height: auto;
  }
  .back-to-top svg {
    -webkit-transition: all 0.2s linear;
    fill: var(--white); /* Change the fill color to red */
    transition: fill 0.2s linear;
    filter: drop-shadow(2px 2px 4px rgba(0, 0, 0, 0.3)); /* Add a drop shadow effect */
    transform-origin: center;
  }
  .back-to-top svg:hover {
    transform: scale(1.2); /* Apply scaling effect on hover */
  }
  @media (max-width: 700px) {
    .back-to-top,
    .back-to-top a,
    .back-to-top img,
    .back-to-top svg {
      display: none;
      /* Vis .back-to-top, n√•r viewporten maksimalt er 900px */
    }
  }
</style>

<script>
  // Get the button element
  const top = document.querySelector(".back-to-top");

  // Add a click event listener to the button
  top.addEventListener("click", function (event) {
    // Prevent the default behavior
    event.preventDefault();

    // Scroll to the top of the page
    window.scrollTo({
      top: 0,
      behavior: "smooth",
    });
  });
</script>
