  <style>
    .white-icon {
      margin-top: 1%;
    }
    .footer {
      background-color: var(--dark-background);
      display: flex;
      flex-direction: row;
      color: var(--ocean-blue);
      padding: 3rem;
    }
    .footer-billede {
      width: 100%;
    }
    .footer-content {
      text-align: right;
      width: 100%;
    }
    .footer-content p {
      font-size: 12px;
    }
    .footer-content a {
      text-decoration: none;
      font-weight: bold;
      color: var(--ocean-blue);
      font-size: 12px;
    }
    .footer-content p a:hover {
      border-bottom: 1px solid var(--ocean-blue);
    }
  </style>
</footer>
